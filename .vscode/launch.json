{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Nest API",
      "args": ["${workspaceFolder}/api/src/main.ts"],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "${workspaceFolder}/api/node_modules/ts-node/register",
        "-r",
        "${workspaceFolder}/api/node_modules/tsconfig-paths/register"
      ],
      "sourceMaps": true,
      "env": {
        "NODE_ENV": "development",
        "TS_NODE_PROJECT": "${workspaceFolder}/api/tsconfig.json"
      },
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "protocol": "inspector",
      "outFiles": ["${workspaceFolder}/api/dist/**/*.js"]
    }
  ]
}
